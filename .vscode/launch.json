    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: CameraCaptureOpenCV Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "192.168.1.198",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/CameraCaptureOpenCV/app",
                    "remoteRoot": "/app/."
                }
            ]
        },
        {
            "name": "Python: Image Classifier Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5679,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/ImageClassifierService/app",
                    "remoteRoot": "/app/."
                }
            ]
        }
    ]
}